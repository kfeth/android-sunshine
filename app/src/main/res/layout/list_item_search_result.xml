<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="location"
            type="com.kfeth.sunshine.data.Location" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="@{clickListener}"
        android:paddingTop="@dimen/spacing_3">

        <ImageView
            android:id="@+id/flagIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="@dimen/spacing_3"
            app:flagIconFromCountryCode="@{location.countryCode}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_location_24dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{location.name}"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
            app:layout_constraintEnd_toStartOf="@+id/temperature"
            app:layout_constraintStart_toEndOf="@+id/flagIcon"
            app:layout_constraintTop_toTopOf="@+id/flagIcon"
            tools:text="@tools:sample/cities" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{location.addressString}"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            app:layout_constraintEnd_toStartOf="@+id/temperature"
            app:layout_constraintStart_toEndOf="@+id/flagIcon"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="@tools:sample/cities" />

        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/spacing_3"
            app:layout_constraintBottom_toBottomOf="@+id/subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:weatherIcon="@{location}"
            tools:srcCompat="@drawable/ic_weather_02d" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_1"
            android:text="@{location.temp}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBottom_toBottomOf="@+id/weatherIcon"
            app:layout_constraintEnd_toStartOf="@+id/weatherIcon"
            app:layout_constraintTop_toTopOf="@+id/weatherIcon"
            tools:text="15Â°" />

        <View
            android:id="@+id/divider"
            style="@style/ListDivider"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/spacing_3"
            app:layout_constraintStart_toEndOf="@+id/flagIcon"
            app:layout_constraintTop_toBottomOf="@+id/flagIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>